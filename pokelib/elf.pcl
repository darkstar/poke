        [[doc="Required alignment of the uncompressed data."]];
    }
  else
    {
      elf64_word ch_reserved;
      elf64_xword ch_size
        [[doc="Size in bytes of the uncompressed data."]];
      elf64_xword ch_addralign
        [[doc="Required alignment of the uncompressed data"]];
    }
