/* Find the greatest common divisor of two unsigned 64-bit integrals A
   and B using the Euclidean algorithm.  */

defun _pkl_gcd = (uint<64> a, uint<64> b) : uint<64>
  {
   if (b == 0)
     return a;
   else
     return _pkl_gcd (b, a % b);
  }

