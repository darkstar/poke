/* XXX Register the help text of this command.  */

defvar pk_dump_usage =
  "Usage: dump :from OFFSET [:size OFFSET] [:to OFFSET]";

defun dump = (offset<uint64,b> from,
              offset<uint64,b> size) void:
  {
   defvar top = from + size;
   defvar offset = from;

   sprint "87654321  0011 2233 4455 6677 8899 aabb ccdd eeff  0123456789ABCDEF\n";
   while (offset < top)
     {
       defvar i = 0;
       sprint "AAAAAAAA  ";
       while (i < 8)
         {
           sprint "XXXX ";
           i = i + 1;
         }

       offset = offset + 1#B;
       sprint "\n";
     }
   /* XXX writeme */
  }
