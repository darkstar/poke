defun qsort = (any[] array, left = 0, right = array'size)
{
  defun partition = (left, right) : int
  {
    let pivot = array[left];
    let i = left;
    let j = right + 1;

    pivot = array[left];
    i = left;
    j = right + 1;
 
    while (1)
      {
        do ++i; while (array[i] <= pivot && i <= r);
        do --j; while (array[j] > pivot);
        if (i >= j) break;

        let t = array[i];
        array[i] = array[j];
        array[j] = t;
      }

    /* Swap.  */
    t = array[left];
    array[left] = array[j];
    array[j] = t;

    return j;
  };

  if (left < right)
    {
      let j = partition (left, right);

      qsort (array, left, right - 1);
      qsort (array, left, right);
    }
}

defun test_qsort = ()
{
  /* Sort several arrays in the current IO stream.  */
  let bytes = byte[2048] @ 0x0;
  let integers = int[512] @ 0xaa;
  let longs = long[256] @ 0xbb;

  qsort (bytes);
  qsort (integers);
  qsort (longs);

  /* Now sort an unmapped array variable.  */
  let array = [3, 2, 1, 0];
  qsort (array);
}
